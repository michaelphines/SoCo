<li class="friend">
<b><%= link_to h(friend.to_s), :action => 'show', :id => friend %></b>
<% if session[:user] == @user.id %>
    <%= link_to image_tag("/images/bclose_16.png", :border => 0), {:controller => 'friends', :action => 'remove', :id => friend}, :title => 'Remove Friend', 
        :confirm => "Are you sure you want to remove this friend?" %>
    <%= link_to image_tag("/images/blong_16.png", :border => 0), {:controller => 'long_term', :action =>'show', :id => friend}, :title => 'Long Term View' %>        
<% end %>
</li>
